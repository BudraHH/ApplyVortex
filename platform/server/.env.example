# ApplyVortex Server - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE
# =============================================================================
# Get this from Neon.tech dashboard
DATABASE_URL=postgresql://username:password@host/database?sslmode=require

# =============================================================================
# REDIS (Keep as-is for Docker setup)
# =============================================================================
REDIS_URL=redis://redis:6379/0

# =============================================================================
# SECURITY
# =============================================================================
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-must-be-at-least-32-characters-long

# =============================================================================
# ENVIRONMENT
# =============================================================================
DEBUG=False
ENVIRONMENT=production
LOG_LEVEL=INFO

# =============================================================================
# FRONTEND & CORS
# =============================================================================
# Your production domain (update after deployment)
CLIENT_URL=https://yourdomain.com
FRONTEND_URL=https://yourdomain.com

# Allowed CORS origins (comma-separated)
BACKEND_CORS_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# =============================================================================
# EMAIL (SMTP) - Optional
# =============================================================================
# For Gmail: use app-specific password
# Tutorial: https://support.google.com/accounts/answer/185833
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password

# =============================================================================
# CLOUDFLARE R2 STORAGE
# =============================================================================
# Get from Cloudflare Dashboard → R2 → Manage R2 API Tokens
R2_ENDPOINT_URL=https://<account-id>.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=your-bucket-name

# =============================================================================
# RATE LIMITS (Optional - adjust based on your needs)
# =============================================================================
RATE_LIMIT_MINUTE=120
RATE_LIMIT_HOUR=1000
RATE_LIMIT_DAY=5000

# =============================================================================
# APPLICATION LIMITS (Optional)
# =============================================================================
FREE_JOBS_PER_DAY=10
PREMIUM_JOBS_PER_DAY=100
RESUME_UPLOAD_SIZE_MB=5
